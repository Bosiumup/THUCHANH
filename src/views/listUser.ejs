<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <title><%= data.title %></title>
    </head>
    <body>
        <%- include('header') %>
        <div class="main-content">
            <div class="container mt-5">
                <h2>Danh sách tài khoản</h2>
                <div class="mb-3 text-end">
                    <a href="/create-user" class="btn btn-primary"
                        >Thêm mới người dùng</a
                    >
                </div>
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Tài khoản</th>
                            <th>Họ tên</th>
                            <th>Địa chỉ</th>
                            <th>Quyền</th>
                            <th>Cài đặt</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < data.users.length; i++) { %>
                        <tr>
                            <td><%= data.users[i].id %></td>
                            <td><%= data.users[i].username %></td>
                            <td><%= data.users[i].fullname %></td>
                            <td><%= data.users[i].address %></td>
                            <td><%= data.users[i].role %></td>
                            <td class="d-flex">
                                <a
                                    href="/edit-user/<%= data.users[i].id %>"
                                    class="btn btn-warning btn-sm me-2"
                                    >Sửa</a
                                >
                                <form action="/delete-user" method="POST">
                                    <input
                                        type="hidden"
                                        name="userId"
                                        value="<%= data.users[i].id %>"
                                    />
                                    <button
                                        type="submit"
                                        class="btn btn-danger btn-sm"
                                    >
                                        Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <!-- Hiển thị thông báo -->
            <% if (data.successMessage) { %>
            <div id="success-message" class="mt-3 alert alert-success">
                <%= data.successMessage %>
            </div>
            <script>
                setTimeout(function () {
                    document.getElementById("success-message").style.display =
                        "none";
                }, 3000);
            </script>
            <% } %>
        </div>
        <%- include('footer') %>
    </body>
</html>
